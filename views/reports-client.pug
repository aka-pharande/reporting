extends layout

block content      
  div.dashboard-container
    h1= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    table
      thead
        tr
          th #
          th Test Name
          th Date
          th Report
      tbody
        each report, index in reports
          tr
            td= index + 1
            td= report.name
            td= report.formattedDate
            td
              a(href=`/download-pdf/${report.id}`, class='btn-download')
                i.fas.fa-download